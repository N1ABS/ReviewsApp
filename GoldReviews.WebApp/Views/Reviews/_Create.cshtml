
<form name="CreateForm" action="@Url.Action("Create", "Reviews")" method="post">
    <div class="card form-horizontal">
        
        <div class="card-body">
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <h4 class="card-title"><strong>Add review</strong></h4>
                </div>
            </div>

            <div class="form-group">
                <label for="ClientName" class="control-label col-md-2">Client name </label>
                <div class="col-md-10">
                    <input id="ClientName" class="form-control" type="text" name="ClientName"/>
                </div>
            </div>

            <div class="form-group">
                <label for="ClientReview" class="control-label col-md-2">Review</label>
                <div class="col-md-10">
                    <textarea id="ClientReview" class="form-control" name="ClientReview"></textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Post" class="btn btn-primary mb-2"/>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}